{
    "name": "hidden-jvc-extension",
    "version": "0.5.0",
    "scripts": {
        "build": "webpack --config webpack.config.js --mode=production --env.NODE_ENV=production",
        "watch": "webpack --config webpack.config.js --watch --mode=development --env.NODE_ENV=development",
        "web-ext": "web-ext run --firefox=firefox-developer-edition --source-dir=build --firefox-profile=hidden-jvc-user --keep-profile-changes"
    },
    "dependencies": {
        "date-fns": "^2.13.0",
        "handlebars": "^4.7.6",
        "open-jvcode": "https://github.com/m7r-227/open-jvcode.git",
        "socket.io-client": "^2.3.0",
        "webextension-polyfill": "^0.6.0"
    },
    "devDependencies": {
        "copy-webpack-plugin": "^5.1.1",
        "css-loader": "^3.5.3",
        "dotenv-webpack": "^2.0.0",
        "eslint": "^6.8.0",
        "handlebars-loader": "^1.7.1",
        "sass": "^1.26.8",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "web-ext": "^4.2.0",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    }
}
