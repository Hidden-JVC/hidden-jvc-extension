{
    "manifest_version": 2,
    "name": "Hidden JVC",
    "version": "0.3.0",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "https://www.jeuxvideo.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.jeuxvideo.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Hidden JVC"
    },
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://hiddenjvc.com/extension/updates.json"
        }
    }
}