<div class="bloc-message-forum hidden-post {{#if post.Post.Pinned}} hidden-post-pinned {{/if}}">
    <div class="conteneur-message">
        <div class="bloc-avatar-msg">
            <div class="back-img-msg">
                <div>
                    <a {{#if User}} href="{{ post.ProfileUrl }}" {{/if}} class="xXx">
                        <img src="{{ [../helpers/getUserProfilePicture] post }}" class="user-avatar-msg"
                            alt="lien mort">
                    </a>
                </div>
            </div>
        </div>

        <div class="inner-head-content">
            <div class="bloc-header">
                {{#if User}}
                    {{#if User.IsAdmin}}
                        <a href="{{ post.ProfileUrl }}" target="_blank" class="xXx bloc-pseudo-msg text-user" style="color: red">
                            {{ post.User.Name }}
                        </a>
                    {{else if User.IsModerator}}
                        <a href="{{ post.ProfileUrl }}" target="_blank" class="xXx bloc-pseudo-msg text-user" style="color: green">
                            {{ post.User.Name }}
                        </a>
                    {{else}}
                        <a href="{{ post.ProfileUrl }}" target="_blank" class="xXx bloc-pseudo-msg text-user" style="color: #20bbdf">
                            {{ post.User.Name }}
                        </a>
                    {{/if}}
                {{else}}
                    <a class="xXx bloc-pseudo-msg text-user">
                        {{ post.Post.Username }}
                    </a>
                {{/if}}

                <div class="bloc-options-msg">
                    {{#if isAuthor}}
                        {{#unless post.Post.Op}}
                            {{#if post.Post.Pinned}}
                                <span style="opacity: 1;" title="Désépingler" data-post-unpin="{{ post.Post.Id }}">
                                    <span style="opacity: 1;"> Désépingler </span>
                                </span>
                            {{/if}}

                            {{#unless post.Post.Pinned}}
                                <span style="opacity: 1;" title="Epingler" data-post-pin="{{ post.Post.Id }}">
                                    <span style="opacity: 1;"> Epingler </span>
                                </span>
                            {{/unless}}
                        {{/unless}}
                    {{/if}}

                    <span class="picto-msg-quote" title="Citer" data-quote="{{ post.Post.Id }}">
                        <span> Citer </span>
                    </span>

                    {{#if ([../helpers/isFromConnectedUser] connectedUser post.User) }}
                        <span class="picto-msg-crayon" title="Editer" data-post-edit="{{ post.Post.Id }}">
                            <span> Editer </span>
                        </span>
                    {{/if}}

                    {{#if isModerator}}
                        <span class="picto-msg-croix" title="Supprimer" data-post-delete="{{ post.Post.Id }}">
                            <span> Supprimer </span>
                        </span>
                    {{/if}}
                </div>

                <div class="bloc-date-msg">
                    <a href="/cisla/forums/message/1036520623" target="_blank" class="xXx lien-jv">
                        {{ [../helpers/postDate] post.Post.CreationDate }}
                    </a>
                </div>
            </div>

            <div class="bloc-contenu">
                <div class="txt-msg  text-enrichi-forum" data-post-display="{{ post.Post.Id }}">
                    {{{ [../helpers/jvcode] post.Post.Content }}}
                    {{!-- {{> editForm }} --}}
                </div>

                {{#if post.Post.ModificationDate}}
                <div class="info-edition-msg">
                    Message édité le {{ [../helpers/postDate] post.Post.ModificationDate }}
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>